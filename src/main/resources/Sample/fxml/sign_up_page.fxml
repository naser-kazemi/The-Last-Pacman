<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>


<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Sample.View.SignUpPage"
            prefHeight="400.0" prefWidth="600.0">

    <top>
        <HBox alignment="CENTER" BorderPane.alignment="CENTER">
            <Label alignment="CENTER" text="Sign Up Page">
                <font>
                    <Font size="22"/>
                </font>
            </Label>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER">
            <HBox alignment="CENTER">
                <Label text="Username: "/>
                <TextField fx:id="username"/>
            </HBox>
            <HBox alignment="CENTER">
                <Label text="Password: "/>
                <TextField fx:id="password"/>
            </HBox>
            <HBox alignment="CENTER">
                <Label text="Confirm Password: "/>
                <TextField fx:id="confirmPassword"/>
            </HBox>
            <Button text="Sign Up" onMouseClicked="#signUp"/>
            <Text fx:id="result"/>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER">
            <Button text="Back" onMouseClicked="#goBack"/>
            <Button text="Go to Welcome Page" onMouseClicked="#goToWelcomePage"/>
        </HBox>
    </bottom>

</BorderPane>
