<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.view.LoginPage"
            prefHeight="549.0" prefWidth="800.0" style="-fx-background-color: #261e7d;">

    <top>
        <HBox alignment="CENTER" BorderPane.alignment="CENTER">
            <Label alignment="CENTER" text="Login Page">
                <font>
                    <Font name="Roboto Light" size="35.0" />
                </font>
            </Label>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" prefHeight="392.0" prefWidth="300.0" spacing="20.0" style="-fx-background-color: #151f2e;">
            <HBox alignment="CENTER" spacing="20">
                <Label text="Username: " style="-fx-text-fill: #f6f6f8; -fx-font-size: 11.5pt;-fx-pref-height: 40px; -fx-pref-width: 300px;"/>
                <Text fx:id="usernameText" style="-fx-text-fill: #f6f6f8; -fx-font-size: 11.5pt;-fx-pref-height: 40px; -fx-pref-width: 300px;"/>
            </HBox>
            <HBox alignment="CENTER" spacing="20">
                <Label text="Password: " style="-fx-text-fill: #f6f6f8; -fx-font-size: 11.5pt;-fx-pref-height: 40px; -fx-pref-width: 300px;"/>
                <Text fx:id="passwordText" style="-fx-text-fill: #f6f6f8; -fx-font-size: 11.5pt;-fx-pref-height: 40px; -fx-pref-width: 300px;"/>
            </HBox>
            <Button fx:id="button" text="show" onMouseClicked="#show" textFill="black"
                    style="-fx-background-color: #e2b44d; -fx-pref-height: 30px;"/>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20">
            <Button text="Logout" fx:id="backLogout" onMouseClicked="#goBackLogout" textFill="black"
                    style="-fx-background-color: #e2b44d; -fx-pref-height: 30px;"/>
            <Button text="Go To Main Page" onMouseClicked="#goToMainPage" textFill="black"
                    style="-fx-background-color: #e2b44d; -fx-pref-height: 30px;"/>
            <padding>
                <Insets bottom="15.0" left="250.0" right="250.0" top="15.0" />
            </padding>
        </HBox>
    </bottom>

</BorderPane>
