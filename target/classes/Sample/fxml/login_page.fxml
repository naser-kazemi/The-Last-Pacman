<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Sample.View.LoginPage"
            prefHeight="400.0" prefWidth="600.0">


    <top>
        <HBox alignment="CENTER" BorderPane.alignment="CENTER">
            <Label alignment="CENTER" text="Login Page">
                <font>
                    <Font size="22"/>
                </font>
            </Label>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" prefHeight="316.0" prefWidth="473.0" BorderPane.alignment="CENTER">
            <Label text="Please enter your username and password"/>
        </VBox>

        <HBox alignment="CENTER">
            <Label text="Don't have an account?"/>
            <Button text="Sign Up" onMouseClicked="#goToSignUpPage"/>
        </HBox>

    </center>

    <bottom>
        <HBox alignment="CENTER">
            <Button text="Back" onMouseClicked="#goBack"/>
        </HBox>
    </bottom>


</BorderPane>
