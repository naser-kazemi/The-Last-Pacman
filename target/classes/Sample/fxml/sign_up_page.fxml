<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>


<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.view.SignUpPage"
            prefHeight="549.0" prefWidth="800.0" style="-fx-background-color: #261e7d;" >

    <top>
        <HBox alignment="CENTER" BorderPane.alignment="CENTER">
            <Label alignment="CENTER" text="Sign Up Page" textFill="azure">
                <font>
                    <Font name="Roboto Light" size="35.0" />
                </font>
            </Label>

        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" prefHeight="392.0" prefWidth="300.0" spacing="20.0" style="-fx-background-color: #151f2e;">
            <HBox alignment="CENTER">
                <TextField promptText="Username" fx:id="username" style="-fx-background-color: #0b1622; -fx-text-fill: #f6f6f8;
                -fx-font-size: 10pt;-fx-pref-height: 40px; -fx-pref-width: 300px;"/>
            </HBox>
            <HBox alignment="CENTER">
                <TextField promptText="Password" fx:id="password" style="-fx-background-color: #0b1622; -fx-text-fill: #f6f6f8;
                -fx-font-size: 10pt;-fx-pref-height: 40px; -fx-pref-width: 300px;"/>
            </HBox>
            <HBox alignment="CENTER">
                <TextField promptText="Confirm Password" fx:id="confirmPassword" style="-fx-background-color: #0b1622;
                -fx-font-size: 10pt;-fx-pref-height: 40px; -fx-pref-width: 300px;-fx-text-fill: #f6f6f8;"/>
            </HBox>
            <Button text="Sign Up" textFill="black" onMouseClicked="#signUp" style="-fx-background-color: #e2b44d; -fx-pref-height: 30px;"/>
            <HBox alignment="CENTER" style="-fx-text-fill: azure">
                <Text fx:id="result" style="-fx-text-fill: #f6f6f8; -fx-font-size: 11.5pt;-fx-pref-height: 40px; -fx-pref-width: 300px;"/>
            </HBox>
            <padding>
                <Insets left="50.0" right="50.0" top="5.0" />
            </padding>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20">
            <Button text="Back" onMouseClicked="#goBack" textFill="black"  style="-fx-background-color: #e2b44d;
            -fx-pref-height: 30px;"/>
            <Button text="Go to Welcome Page" textFill="black" onMouseClicked="#goToWelcomePage"
                    style="-fx-background-color: #e2b44d; -fx-pref-height: 30px;"/>
            <padding>
                <Insets bottom="15.0" left="250.0" right="250.0" top="15.0" />
            </padding>
        </HBox>
    </bottom>

</BorderPane>
