<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>



<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Sample.View.WelcomePage">
   <top>
       <HBox  BorderPane.alignment="CENTER" alignment="CENTER">
           <Label alignment="TOP_CENTER" text="Pacman" >
               <font>
                   <Font size="22.0" />
               </font>
           </Label>
       </HBox>
   </top>
   <center>
      <VBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER" >
          <Button text="Login" onMouseClicked="#goToLoginPage"/>
          <Button text="Play as a guest" onMouseClicked="#goToMainPageAsGuest"/>
          <Button text="Exit" onMouseClicked="#exit"/>
      </VBox>

   </center>
</BorderPane>
